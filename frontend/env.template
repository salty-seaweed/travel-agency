# Frontend Environment Variables Template
# Copy this file to .env and update the values

# API Configuration
VITE_API_BASE_URL=http://localhost:8001/api

# WhatsApp Configuration (IMPORTANT: Use a valid WhatsApp number)
# Format: +[country code][number] (e.g., +9607441097 for Maldives)
# Make sure this number is registered on WhatsApp
VITE_WHATSAPP_NUMBER=+9607441097

# Contact Information
VITE_SUPPORT_EMAIL=support@threadtravels.com
VITE_COMPANY_NAME=Thread Travels & Tours

# File Upload Settings
VITE_MAX_IMAGE_SIZE=5242880

# Pagination Settings
VITE_DEFAULT_PAGE_SIZE=12

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=false
VITE_ENABLE_OFFLINE=false
VITE_USE_MOCK_DATA=false

# Google Analytics (optional)
VITE_GA_TRACKING_ID=


